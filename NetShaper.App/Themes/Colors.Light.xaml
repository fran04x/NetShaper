<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ══════════════════════════════════════════════════════════════════════════
         NETSHAPER LIGHT THEME - Colors AND Brushes
         
         Contains both Color and Brush definitions for proper runtime theme switching.
         Symmetric with Colors.Dark.xaml
         ══════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Background hierarchy (3 levels for depth) -->
    <Color x:Key="BackgroundLevel0Color">#FAFAFA</Color>
    <Color x:Key="BackgroundLevel1Color">#FFFFFF</Color>
    <Color x:Key="BackgroundLevel2Color">#F5F5F5</Color>
    
    <!-- Foreground hierarchy -->
    <Color x:Key="ForegroundPrimaryColor">#1A1A1A</Color>
    <Color x:Key="ForegroundSecondaryColor">#666666</Color>
    <Color x:Key="ForegroundMutedColor">#999999</Color>
    
    <!-- Accent colors -->
    <Color x:Key="AccentColor">#0078D4</Color>
    <Color x:Key="AccentHoverColor">#106EBE</Color>
    <Color x:Key="AccentActiveColor">#005A9E</Color>
    
    <!-- Semantic colors -->
    <Color x:Key="SuccessColor">#28A745</Color>
    <Color x:Key="DangerColor">#DC3545</Color>
    <Color x:Key="DangerHoverColor">#C82333</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    
    <!-- Border/separator -->
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="BorderSubtleColor">#EEEEEE</Color>
    
    <!-- Category badge colors -->
    <Color x:Key="DropBadgeBackgroundColor">#FFEBEE</Color>
    <Color x:Key="DropBadgeForegroundColor">#C62828</Color>
    <Color x:Key="DelayBadgeBackgroundColor">#FFF3E0</Color>
    <Color x:Key="DelayBadgeForegroundColor">#E65100</Color>
    <Color x:Key="ModifyBadgeBackgroundColor">#E3F2FD</Color>
    <Color x:Key="ModifyBadgeForegroundColor">#1565C0</Color>
    <Color x:Key="InjectBadgeBackgroundColor">#F3E5F5</Color>
    <Color x:Key="InjectBadgeForegroundColor">#7B1FA2</Color>

    <!-- ══════════════════════════════════════════════════════════════════════════
         BRUSHES - Defined in theme file for proper runtime switching
         ══════════════════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="BackgroundLevel0Brush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="BackgroundLevel1Brush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundLevel2Brush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#666666"/>
    <SolidColorBrush x:Key="ForegroundMutedBrush" Color="#999999"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="AccentActiveBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#DC3545"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#C82333"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#EEEEEE"/>
    
    <!-- Badge brushes -->
    <SolidColorBrush x:Key="DropBadgeBackgroundBrush" Color="#FFEBEE"/>
    <SolidColorBrush x:Key="DropBadgeForegroundBrush" Color="#C62828"/>
    <SolidColorBrush x:Key="DelayBadgeBackgroundBrush" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="DelayBadgeForegroundBrush" Color="#E65100"/>
    <SolidColorBrush x:Key="ModifyBadgeBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="ModifyBadgeForegroundBrush" Color="#1565C0"/>
    <SolidColorBrush x:Key="InjectBadgeBackgroundBrush" Color="#F3E5F5"/>
    <SolidColorBrush x:Key="InjectBadgeForegroundBrush" Color="#7B1FA2"/>

</ResourceDictionary>
