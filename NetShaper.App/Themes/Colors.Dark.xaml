<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ══════════════════════════════════════════════════════════════════════════
         NETSHAPER DARK THEME - Discord Style
         
         Based on Discord's brand colors and dark theme palette.
         ══════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Background hierarchy (3 levels for depth) - Discord Dark -->
    <Color x:Key="BackgroundLevel0Color">#1E1F22</Color>      <!-- Darkest - sidebar -->
    <Color x:Key="BackgroundLevel1Color">#2B2D31</Color>      <!-- Cards/panels -->
    <Color x:Key="BackgroundLevel2Color">#313338</Color>      <!-- Main content area -->
    
    <!-- Foreground hierarchy -->
    <Color x:Key="ForegroundPrimaryColor">#F2F3F5</Color>     <!-- Primary text -->
    <Color x:Key="ForegroundSecondaryColor">#B5BAC1</Color>   <!-- Secondary text -->
    <Color x:Key="ForegroundMutedColor">#80848E</Color>       <!-- Muted/disabled -->
    
    <!-- Accent colors - Discord Blurple (brighter for dark) -->
    <Color x:Key="AccentColor">#5865F2</Color>                <!-- Blurple -->
    <Color x:Key="AccentHoverColor">#6B78F5</Color>           <!-- Lighter blurple -->
    <Color x:Key="AccentActiveColor">#4752C4</Color>          <!-- Pressed -->
    
    <!-- Semantic colors - Discord palette -->
    <Color x:Key="SuccessColor">#57F287</Color>               <!-- Discord Green -->
    <Color x:Key="DangerColor">#ED4245</Color>                <!-- Discord Red -->
    <Color x:Key="DangerHoverColor">#F05356</Color>           <!-- Lighter red -->
    <Color x:Key="WarningColor">#FEE75C</Color>               <!-- Discord Yellow -->
    
    <!-- Border/separator -->
    <Color x:Key="BorderColor">#3F4147</Color>
    <Color x:Key="BorderSubtleColor">#35363C</Color>
    
    <!-- Category badge colors (dark variants) -->
    <Color x:Key="DropBadgeBackgroundColor">#3D2323</Color>
    <Color x:Key="DropBadgeForegroundColor">#F38B8D</Color>
    <Color x:Key="DelayBadgeBackgroundColor">#3D3520</Color>
    <Color x:Key="DelayBadgeForegroundColor">#FEF0A6</Color>
    <Color x:Key="ModifyBadgeBackgroundColor">#2A2D4D</Color>
    <Color x:Key="ModifyBadgeForegroundColor">#A4ADF7</Color>
    <Color x:Key="InjectBadgeBackgroundColor">#3D2035</Color>
    <Color x:Key="InjectBadgeForegroundColor">#F291C3</Color>

    <!-- ══════════════════════════════════════════════════════════════════════════
         BRUSHES
         ══════════════════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="BackgroundLevel0Brush" Color="#1E1F22"/>
    <SolidColorBrush x:Key="BackgroundLevel1Brush" Color="#2B2D31"/>
    <SolidColorBrush x:Key="BackgroundLevel2Brush" Color="#313338"/>
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#F2F3F5"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#B5BAC1"/>
    <SolidColorBrush x:Key="ForegroundMutedBrush" Color="#80848E"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#5865F2"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#6B78F5"/>
    <SolidColorBrush x:Key="AccentActiveBrush" Color="#4752C4"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#57F287"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#ED4245"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#F05356"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FEE75C"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3F4147"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#35363C"/>
    
    <!-- Badge brushes -->
    <SolidColorBrush x:Key="DropBadgeBackgroundBrush" Color="#3D2323"/>
    <SolidColorBrush x:Key="DropBadgeForegroundBrush" Color="#F38B8D"/>
    <SolidColorBrush x:Key="DelayBadgeBackgroundBrush" Color="#3D3520"/>
    <SolidColorBrush x:Key="DelayBadgeForegroundBrush" Color="#FEF0A6"/>
    <SolidColorBrush x:Key="ModifyBadgeBackgroundBrush" Color="#2A2D4D"/>
    <SolidColorBrush x:Key="ModifyBadgeForegroundBrush" Color="#A4ADF7"/>
    <SolidColorBrush x:Key="InjectBadgeBackgroundBrush" Color="#3D2035"/>
    <SolidColorBrush x:Key="InjectBadgeForegroundBrush" Color="#F291C3"/>

</ResourceDictionary>
