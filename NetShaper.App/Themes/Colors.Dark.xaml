<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ══════════════════════════════════════════════════════════════════════════
         NETSHAPER DARK THEME - Colors AND Brushes
         
         Contains both Color and Brush definitions for proper runtime theme switching.
         Symmetric with Colors.Light.xaml
         ══════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Background hierarchy (3 levels for depth) -->
    <Color x:Key="BackgroundLevel0Color">#1A1A1A</Color>
    <Color x:Key="BackgroundLevel1Color">#252525</Color>
    <Color x:Key="BackgroundLevel2Color">#2E2E2E</Color>
    
    <!-- Foreground hierarchy -->
    <Color x:Key="ForegroundPrimaryColor">#F0F0F0</Color>
    <Color x:Key="ForegroundSecondaryColor">#A0A0A0</Color>
    <Color x:Key="ForegroundMutedColor">#707070</Color>
    
    <!-- Accent colors (slightly brighter for dark mode) -->
    <Color x:Key="AccentColor">#3399FF</Color>
    <Color x:Key="AccentHoverColor">#4DA6FF</Color>
    <Color x:Key="AccentActiveColor">#2680D9</Color>
    
    <!-- Semantic colors -->
    <Color x:Key="SuccessColor">#3CB371</Color>
    <Color x:Key="DangerColor">#E74C3C</Color>
    <Color x:Key="DangerHoverColor">#C0392B</Color>
    <Color x:Key="WarningColor">#F1C40F</Color>
    
    <!-- Border/separator -->
    <Color x:Key="BorderColor">#404040</Color>
    <Color x:Key="BorderSubtleColor">#333333</Color>
    
    <!-- Category badge colors (darker variants for dark mode) -->
    <Color x:Key="DropBadgeBackgroundColor">#3D2020</Color>
    <Color x:Key="DropBadgeForegroundColor">#EF9A9A</Color>
    <Color x:Key="DelayBadgeBackgroundColor">#3D3020</Color>
    <Color x:Key="DelayBadgeForegroundColor">#FFCC80</Color>
    <Color x:Key="ModifyBadgeBackgroundColor">#1E3A5F</Color>
    <Color x:Key="ModifyBadgeForegroundColor">#90CAF9</Color>
    <Color x:Key="InjectBadgeBackgroundColor">#2D1F3D</Color>
    <Color x:Key="InjectBadgeForegroundColor">#CE93D8</Color>

    <!-- ══════════════════════════════════════════════════════════════════════════
         BRUSHES - Defined in theme file for proper runtime switching
         ══════════════════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="BackgroundLevel0Brush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="BackgroundLevel1Brush" Color="#252525"/>
    <SolidColorBrush x:Key="BackgroundLevel2Brush" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="ForegroundMutedBrush" Color="#707070"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#3399FF"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#4DA6FF"/>
    <SolidColorBrush x:Key="AccentActiveBrush" Color="#2680D9"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#3CB371"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#E74C3C"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#C0392B"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F1C40F"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#404040"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#333333"/>
    
    <!-- Badge brushes -->
    <SolidColorBrush x:Key="DropBadgeBackgroundBrush" Color="#3D2020"/>
    <SolidColorBrush x:Key="DropBadgeForegroundBrush" Color="#EF9A9A"/>
    <SolidColorBrush x:Key="DelayBadgeBackgroundBrush" Color="#3D3020"/>
    <SolidColorBrush x:Key="DelayBadgeForegroundBrush" Color="#FFCC80"/>
    <SolidColorBrush x:Key="ModifyBadgeBackgroundBrush" Color="#1E3A5F"/>
    <SolidColorBrush x:Key="ModifyBadgeForegroundBrush" Color="#90CAF9"/>
    <SolidColorBrush x:Key="InjectBadgeBackgroundBrush" Color="#2D1F3D"/>
    <SolidColorBrush x:Key="InjectBadgeForegroundBrush" Color="#CE93D8"/>

</ResourceDictionary>
