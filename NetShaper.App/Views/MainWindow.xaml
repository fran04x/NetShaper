<Window x:Class="NetShaper.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NetShaper.App.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}"
        Title="NetShaper" 
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundLevel0Brush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER BAR -->
        <Border Grid.Row="0"
                Background="{DynamicResource BackgroundLevel1Brush}"
                BorderBrush="{DynamicResource BorderSubtleBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="28" Height="28" Background="{DynamicResource AccentBrush}" 
                            CornerRadius="4" Margin="0,0,8,0">
                        <TextBlock Text="N" Foreground="White" FontWeight="Bold" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="NetShaper"
                               Foreground="{DynamicResource ForegroundPrimaryBrush}"
                               FontSize="{DynamicResource FontSizeL}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <Button Style="{StaticResource ThemeToggleStyle}"
                            Content="{Binding ThemeIcon}"
                            Foreground="{Binding ThemeIconBrush}"
                            Command="{Binding ToggleThemeCommand}"
                            FontFamily="Segoe MDL2 Assets"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Filter TextBox -->
                <TextBox Grid.Column="2"
                         Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource SearchBoxStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFilterValid}" Value="False">
                                    <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Presets Dropdown -->
                <ComboBox Grid.Column="4"
                          Style="{StaticResource PresetComboBoxStyle}"
                          VerticalAlignment="Center">
                    <ComboBoxItem Content="Preset" IsSelected="True"/>
                    <ComboBoxItem Content="High Latency"/>
                    <ComboBoxItem Content="Packet Loss"/>
                    <ComboBoxItem Content="Mobile 3G"/>
                </ComboBox>

                <!-- START Button -->
                <ToggleButton Grid.Column="6"
                              Style="{StaticResource StartStopToggleStyle}"
                              Content="{Binding StartStopButtonText}"
                              IsChecked="{Binding IsRunning, Mode=TwoWay}"
                              VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT: RULE ROWS -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            
            <Border Background="{DynamicResource BackgroundLevel1Brush}">
                <StackPanel Grid.IsSharedSizeScope="True">
                    
                    <!-- ROW: Lag -->
                    <Border Style="{StaticResource RuleRowStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColToggle"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColActions"/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Style="{StaticResource CompactToggleSwitchStyle}"
                                          IsChecked="{Binding RulesConfig.Lag.Enabled, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="Lag" VerticalAlignment="Center" Margin="12,0,0,0" MinWidth="100"
                                       Foreground="{DynamicResource ForegroundPrimaryBrush}" FontWeight="Medium"/>
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlUnit"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Delay" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="1" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.Lag.DelayMs, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Lag.Enabled}"/>
                                <TextBlock Grid.Column="4" Text="ms" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="6,0,0,0" MinWidth="25"/>
                            </Grid>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ToggleButton Content="↓" Style="{StaticResource DirectionArrowStyle}"
                                              IsChecked="{Binding RulesConfig.Lag.IsInbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Lag.Enabled}"/>
                                <ToggleButton Content="↑" Style="{StaticResource DirectionArrowStyle}" Margin="4,0,0,0"
                                              IsChecked="{Binding RulesConfig.Lag.IsOutbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Lag.Enabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- ROW: Jitter -->
                    <Border Style="{StaticResource RuleRowStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColToggle"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColActions"/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Style="{StaticResource CompactToggleSwitchStyle}"
                                          IsChecked="{Binding RulesConfig.Jitter.Enabled, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="Jitter" VerticalAlignment="Center" Margin="12,0,0,0" MinWidth="100"
                                       Foreground="{DynamicResource ForegroundPrimaryBrush}" FontWeight="Medium"/>
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlUnit"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Min" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="1" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.Jitter.MinMs, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Jitter.Enabled}"/>
                                <TextBlock Grid.Column="2" Text="Max" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="12,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="3" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.Jitter.MaxMs, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Jitter.Enabled}"/>
                                <TextBlock Grid.Column="4" Text="ms" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="6,0,0,0" MinWidth="25"/>
                            </Grid>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ToggleButton Content="↓" Style="{StaticResource DirectionArrowStyle}"
                                              IsChecked="{Binding RulesConfig.Jitter.IsInbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Jitter.Enabled}"/>
                                <ToggleButton Content="↑" Style="{StaticResource DirectionArrowStyle}" Margin="4,0,0,0"
                                              IsChecked="{Binding RulesConfig.Jitter.IsOutbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Jitter.Enabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- ROW: Drop -->
                    <Border Style="{StaticResource RuleRowStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColToggle"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColActions"/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Style="{StaticResource CompactToggleSwitchStyle}"
                                          IsChecked="{Binding RulesConfig.Drop.Enabled, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="Drop" VerticalAlignment="Center" Margin="12,0,0,0" MinWidth="100"
                                       Foreground="{DynamicResource ForegroundPrimaryBrush}" FontWeight="Medium"/>
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlUnit"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Chance" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="1" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.Drop.Chance, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Drop.Enabled}"/>
                                <TextBlock Grid.Column="4" Text="%" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="6,0,0,0" MinWidth="25"/>
                            </Grid>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ToggleButton Content="↓" Style="{StaticResource DirectionArrowStyle}"
                                              IsChecked="{Binding RulesConfig.Drop.IsInbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Drop.Enabled}"/>
                                <ToggleButton Content="↑" Style="{StaticResource DirectionArrowStyle}" Margin="4,0,0,0"
                                              IsChecked="{Binding RulesConfig.Drop.IsOutbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Drop.Enabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- ROW: Throttle -->
                    <Border Style="{StaticResource RuleRowStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColToggle"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColActions"/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Style="{StaticResource CompactToggleSwitchStyle}"
                                          IsChecked="{Binding RulesConfig.Throttle.Enabled, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="Throttle" VerticalAlignment="Center" Margin="12,0,0,0" MinWidth="100"
                                       Foreground="{DynamicResource ForegroundPrimaryBrush}" FontWeight="Medium"/>
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlUnit"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="PPS" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="1" Style="{StaticResource CompactInputStyle}" Width="55"
                                         Text="{Binding RulesConfig.Throttle.Pps, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Throttle.Enabled}"/>
                                <TextBlock Grid.Column="2" Text="Timeframe" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="12,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="3" Style="{StaticResource CompactInputStyle}" Width="55"
                                         Text="{Binding RulesConfig.Throttle.TimeframeMs, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Throttle.Enabled}"/>
                                <TextBlock Grid.Column="4" Text="ms" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="6,0,0,0" MinWidth="25"/>
                                <StackPanel Grid.Column="5" Orientation="Horizontal" Margin="12,0,0,0">
                                    <CheckBox Content="Drop" 
                                              Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                              IsChecked="{Binding RulesConfig.Throttle.Drop, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Throttle.Enabled}"/>
                                    <TextBlock Text="Chance" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                               VerticalAlignment="Center" Margin="12,0,8,0"/>
                                    <TextBox Style="{StaticResource CompactInputStyle}"
                                             Text="{Binding RulesConfig.Throttle.Chance, UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="{Binding RulesConfig.Throttle.Enabled}"/>
                                    <TextBlock Text="%" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                </StackPanel>
                            </Grid>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ToggleButton Content="↓" Style="{StaticResource DirectionArrowStyle}"
                                              IsChecked="{Binding RulesConfig.Throttle.IsInbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Throttle.Enabled}"/>
                                <ToggleButton Content="↑" Style="{StaticResource DirectionArrowStyle}" Margin="4,0,0,0"
                                              IsChecked="{Binding RulesConfig.Throttle.IsOutbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Throttle.Enabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- ROW: Bandwidth -->
                    <Border Style="{StaticResource RuleRowStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColToggle"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColActions"/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Style="{StaticResource CompactToggleSwitchStyle}"
                                          IsChecked="{Binding RulesConfig.Bandwidth.Enabled, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="Bandwidth" VerticalAlignment="Center" Margin="12,0,0,0" MinWidth="100"
                                       Foreground="{DynamicResource ForegroundPrimaryBrush}" FontWeight="Medium"/>
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlUnit"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Limit" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="1" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.Bandwidth.Limit, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Bandwidth.Enabled}"/>
                                <ComboBox Grid.Column="3" Width="55" Margin="12,0,0,0"
                                          SelectedIndex="{Binding RulesConfig.Bandwidth.Unit, Mode=TwoWay, Converter={StaticResource EnumToIntConverter}}"
                                          IsEnabled="{Binding RulesConfig.Bandwidth.Enabled}">
                                    <ComboBoxItem Content="KB"/>
                                    <ComboBoxItem Content="MB"/>
                                    <ComboBoxItem Content="GB"/>
                                </ComboBox>
                                <CheckBox Grid.Column="5" Content="Drop overflow" Margin="12,0,0,0"
                                          Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                          IsChecked="{Binding RulesConfig.Bandwidth.DropOverflow, Mode=TwoWay}"
                                          IsEnabled="{Binding RulesConfig.Bandwidth.Enabled}"/>
                            </Grid>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ToggleButton Content="↓" Style="{StaticResource DirectionArrowStyle}"
                                              IsChecked="{Binding RulesConfig.Bandwidth.IsInbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Bandwidth.Enabled}"/>
                                <ToggleButton Content="↑" Style="{StaticResource DirectionArrowStyle}" Margin="4,0,0,0"
                                              IsChecked="{Binding RulesConfig.Bandwidth.IsOutbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Bandwidth.Enabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- ROW: Duplicate -->
                    <Border Style="{StaticResource RuleRowStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColToggle"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColActions"/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Style="{StaticResource CompactToggleSwitchStyle}"
                                          IsChecked="{Binding RulesConfig.Duplicate.Enabled, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="Duplicate" VerticalAlignment="Center" Margin="12,0,0,0" MinWidth="100"
                                       Foreground="{DynamicResource ForegroundPrimaryBrush}" FontWeight="Medium"/>
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlUnit"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Count" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="1" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.Duplicate.Count, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Duplicate.Enabled}"/>
                                <TextBlock Grid.Column="2" Text="Chance" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="12,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="3" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.Duplicate.Chance, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Duplicate.Enabled}"/>
                                <TextBlock Grid.Column="4" Text="%" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="6,0,0,0" MinWidth="25"/>
                            </Grid>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ToggleButton Content="↓" Style="{StaticResource DirectionArrowStyle}"
                                              IsChecked="{Binding RulesConfig.Duplicate.IsInbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Duplicate.Enabled}"/>
                                <ToggleButton Content="↑" Style="{StaticResource DirectionArrowStyle}" Margin="4,0,0,0"
                                              IsChecked="{Binding RulesConfig.Duplicate.IsOutbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Duplicate.Enabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- ROW: OutOfOrder -->
                    <Border Style="{StaticResource RuleRowStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColToggle"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColActions"/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Style="{StaticResource CompactToggleSwitchStyle}"
                                          IsChecked="{Binding RulesConfig.OutOfOrder.Enabled, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="OutOfOrder" VerticalAlignment="Center" Margin="12,0,0,0" MinWidth="100"
                                       Foreground="{DynamicResource ForegroundPrimaryBrush}" FontWeight="Medium"/>
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlUnit"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Max Delay" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="1" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.OutOfOrder.MaxDelayMs, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.OutOfOrder.Enabled}"/>
                                <TextBlock Grid.Column="4" Text="ms" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="6,0,0,0" MinWidth="25"/>
                            </Grid>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ToggleButton Content="↓" Style="{StaticResource DirectionArrowStyle}"
                                              IsChecked="{Binding RulesConfig.OutOfOrder.IsInbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.OutOfOrder.Enabled}"/>
                                <ToggleButton Content="↑" Style="{StaticResource DirectionArrowStyle}" Margin="4,0,0,0"
                                              IsChecked="{Binding RulesConfig.OutOfOrder.IsOutbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.OutOfOrder.Enabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- ROW: Burst -->
                    <Border Style="{StaticResource RuleRowStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColToggle"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColActions"/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Style="{StaticResource CompactToggleSwitchStyle}"
                                          IsChecked="{Binding RulesConfig.Burst.Enabled, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="Burst" VerticalAlignment="Center" Margin="12,0,0,0" MinWidth="100"
                                       Foreground="{DynamicResource ForegroundPrimaryBrush}" FontWeight="Medium"/>
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlUnit"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Interval" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="1" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.Burst.IntervalMs, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.Burst.Enabled}"/>
                                <TextBlock Grid.Column="4" Text="ms" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="6,0,0,0" MinWidth="25"/>
                            </Grid>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ToggleButton Content="↓" Style="{StaticResource DirectionArrowStyle}"
                                              IsChecked="{Binding RulesConfig.Burst.IsInbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Burst.Enabled}"/>
                                <ToggleButton Content="↑" Style="{StaticResource DirectionArrowStyle}" Margin="4,0,0,0"
                                              IsChecked="{Binding RulesConfig.Burst.IsOutbound, Mode=TwoWay}"
                                              IsEnabled="{Binding RulesConfig.Burst.Enabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- ROW: AckDelay -->
                    <Border Style="{StaticResource RuleRowStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColToggle"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColActions"/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Style="{StaticResource CompactToggleSwitchStyle}"
                                          IsChecked="{Binding RulesConfig.AckDelay.Enabled, Mode=TwoWay}"/>
                            <TextBlock Grid.Column="1" Text="AckDelay" VerticalAlignment="Center" Margin="12,0,0,0" MinWidth="100"
                                       Foreground="{DynamicResource ForegroundPrimaryBrush}" FontWeight="Medium"/>
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput1"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlLabel2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlInput2"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="CtrlUnit"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Delay" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" MinWidth="55"/>
                                <TextBox Grid.Column="1" Style="{StaticResource CompactInputStyle}"
                                         Text="{Binding RulesConfig.AckDelay.DelayMs, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding RulesConfig.AckDelay.Enabled}"/>
                                <TextBlock Grid.Column="4" Text="ms" Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="6,0,0,0" MinWidth="25"/>
                            </Grid>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ToggleButton Content="↓" Style="{StaticResource DirectionArrowStyle}"
                                              IsChecked="{Binding RulesConfig.AckDelay.IsInbound, Mode=TwoWay}"
