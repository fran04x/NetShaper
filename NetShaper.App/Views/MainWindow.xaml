                                        Background="{DynamicResource BackgroundLevel2Brush}"
                                        Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                        BorderBrush="{DynamicResource BorderSubtleBrush}"
                                        BorderThickness="1">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="Bd" 
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource BackgroundLevel1Brush}"/>
                                                                <Setter Property="Foreground" Value="{DynamicResource ForegroundMutedBrush}"/>
                                                            </Trigger>
                                                            <DataTrigger Binding="{Binding RulesConfig.TcpRst.RstTriggered}" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
