<Application x:Class="NetShaper.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:NetShaper.App.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme resources (colors, typography, styles) -->
                <ResourceDictionary Source="Themes/DefaultTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:EnumToIntConverter x:Key="EnumToIntConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
